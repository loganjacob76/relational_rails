<%= form_with url: "/books/#{@book.id}", method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :fiction %>
  <%= f.check_box :fiction, {}, checked = "true", unchecked = "false" %><br>
  <%= f.label :number_of_pages %>
  <%= f.text_field :number_of_pages %><br>
  <%= f.label :author_id %>
  <%= f.text_field :author_id %><br>
  <%= f.submit 'Update Book' %>
<% end %>
